    <div class="container">
        <h1 class="mb-4">Journal Entries</h1>
        <a href="/journal/create" class="btn btn-success">New Journal</a>

        <% journals.forEach(journal => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= journal.title %></h4>
                <div class="card-subtitle text-muted md-2">
                    <%= journal.date.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2">
                    <%= journal.description%>
                </div>
                <div>
                    <a href="/journal/<%= journal.journal_id%>" class="btn btn-primary">Read More</a>
                    <a href="/journal/edit/<%= journal.journal_id%>" class="btn btn-info">Edit</a>
                    <form action="journal/delete/<%= journal.journal_id%>?_method=DELETE" method="POST"
                        class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

</body>

